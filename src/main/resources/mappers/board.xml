<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.enjoytrip.domain.board.mapper.BoardMapper">
    <resultMap id="boardResultMap" type="BoardDto">
        <result column="board_id" property="boardId"/>
        <result column="subject" property="subject"/>
        <result column="content" property="content"/>
        <result column="user_id" property="userId"/>
        <result column="create_date" property="createDate"/>
    </resultMap>

    <insert id="writeArticle" parameterType="boardDto">
        insert into board (subject, content, user_id, create_date)
        values (#{subject}, #{content}, #{userId}, #{createDate});
    </insert>

    <select id="listArticle" resultMap="boardResultMap">
        select *
        from board;
    </select>
</mapper>