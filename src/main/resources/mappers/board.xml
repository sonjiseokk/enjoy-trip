<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.enjoytrip.domain.board.mapper.BoardMapper">
    <insert id="writeArticle" parameterType="BoardDto">
        insert into board (subject, content, user_id)
        values (#{subject}, #{content}, #{userId});
    </insert>

    <select id="listArticle" resultType="BoardDto">
        select *
        from board;
    </select>

    <select id="findById" parameterType="int" resultType="BoardDto">
        select *
        from board
        where board_id = #{id}
    </select>

    <update id="viewCount" parameterType="int">
	    update board
	    set view_count = view_count+1
        where board_id = #{id}
    </update>
</mapper>